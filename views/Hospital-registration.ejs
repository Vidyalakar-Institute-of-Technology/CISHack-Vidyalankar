<div class="container">
    <div class="row">
        <div class="section-title" id="covid">
            <h2 class="text-center">HOSPITAL REGISTRATION</h2>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-12 col-md-6 offset-md-1">
            <form>
                <div class="form-group row">
                    <div class="col-6">
                        <label for="name" class="col-form-label">Hospital Name</label>
                        <div class="col-md-12">
                            <input type="text" class="form-control control" id="name" name="name" placeholder="Hospital Name" required>
                        </div>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="phone" class="col-form-label">Contact Tel.</label>
                          <div class="col-md-3">
                              <input type="number" class="form-control control" id="phone" name="phone" placeholder="Phone" required>
                          </div>
                </div>
                <div class="form-group row">
                  <div class="col-8">
                    <label for="emailid" class="col-form-label">Email</label>
                    <div class="col-md-10">
                      <input type="email" class="form-control control" id="emailid" name="emailid" placeholder="Email" required>
                    </div>
                </div>
              </div>
              <div class="form-group row">
                <label for="address" class="col-form-label">Address</label>
                      <div class="col-md-11">
                        <input type="text" class="form-control control" id="address" name="address" placeholder="Address" required>
                      </div>
              </div>
              <div class="form-group row">
                <div class="col-4">
                  <label for="city" class="col-form-label">City</label>
                  <div class="col-md-10">
                    <input type="city" class="form-control control" id="city" name="city" placeholder="City" required>
                  </div>
              </div>
              <div class="col-4">
              <label for="state" class=" col-form-label">State</label>
                  <div class="col-md-10">
                      <input type="state" class="form-control control" id="state" name="state" placeholder="State" required>
                  </div>
              </div>
              <div class="col-3">
                <label for="password" class=" col-form-label">Zip code</label>
                    <div class="col-md-10">
                        <input type="number" class="form-control control" id="zip-code" name="zip-code" placeholder="zip-code" required>
                    </div>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-11">
                  <input type="radio" id="1" name="number" value="1">
                  <label for="1"><strong>Government</strong></label>
                  <input type="radio" id="2" name="number" value="2">
                  <label for="2"><strong>Private</strong></label>                    
                </div>
            </div>
              <br>
                <div class="form-group row">
                    <div class="col-6">
                      <a href="/" class="btn appointment-btn">Back</a>
                  </div>
                  <div class="col-6">
                    <button href="/" class="btn appointment-btn" onclick="FinishedAlert()">Register</button>
                  </div>
                </div>
                <br>
            </form>
        </div>
    </div>
</div>















