    <!-- ======= Header ======= -->
<div class="container">
    <div class="row">
        <div class="section-title" id="covid">
            <h2 class="text-center">HOSPITAL LIST</h2>
        </div>
    </div>
    <div class="row">
        <table class="table table-bordered table-hover">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Sr.No</th>
                    <th scope="col">Hospital</th>
                    <th scope="col">Address</th>
                    <th scope="col">Contact</th>
                </tr>
            </thead>
            <tbody>
                <%  var x = 1; hospitals.forEach(function(hospital) { %>
                    <tr>
                       <th scope="row"><%= x %></th>
                           <td> <%= hospital.hospitalname %> </td>
                           <td> <%= hospital.hospitaladdress %> </td>
                           <td> <%= hospital.hospitalphone %> </td>
                      </tr>
                <%  x++ }); %>
            </tbody>
        </table>
    </div>
    <div>
        <a href="/login" class="btn appointment-btn scrollto">Back</a>
    </div>
</div>















